<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karen.rotate.MainActivity">

    <TextView
        android:id="@+id/txtAngle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_txt"
        android:layout_marginTop="@dimen/margin_txt"/>

    <ImageView
        android:id="@+id/triangleImg"
        android:layout_width="@dimen/size_img"
        android:layout_height="@dimen/size_img"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/triangle" />


</RelativeLayout>
